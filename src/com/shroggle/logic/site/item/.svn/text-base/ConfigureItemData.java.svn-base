package com.shroggle.logic.site.item;

import com.shroggle.entity.DraftItem;
import com.shroggle.entity.Site;
import com.shroggle.entity.WidgetItem;

/**
 * @author dmitry.solomadin
 */
public class ConfigureItemData<T extends DraftItem> {

    private WidgetItem widget;

    private T draftItem;

    private Site site;

    public WidgetItem getWidget() {
        return widget;
    }

    public void setWidget(WidgetItem widget) {
        this.widget = widget;
    }

    public T getDraftItem() {
        return draftItem;
    }

    public void setDraftItem(T draftItem) {
        this.draftItem = draftItem;
    }

    public Site getSite() {
        return site;
    }

    public void setSite(Site site) {
        this.site = site;
    }

}
