package com.shroggle.util.resource;

/**
 * @author Artem Stasuk
 */
public final class ResourceRequest {

    public ResourceRequest(
            final int id, final int sizeId, final int sizeAdditionId,
            final Integer width, final Integer height) {
        this.id = id;
        this.sizeId = sizeId;
        this.sizeAdditionId = sizeAdditionId;
        this.width = width;
        this.height = height;
    }

    public int getSizeAdditionId() {
        return sizeAdditionId;
    }

    public int getSizeId() {
        return sizeId;
    }

    public int getId() {
        return id;
    }

    public Integer getWidth() {
        return width;
    }

    public Integer getHeight() {
        return height;
    }

    private final int id;
    private final int sizeId;
    private final int sizeAdditionId;
    private final Integer width;
    private final Integer height;

}
